{
  "name": "viral-ngs-builder",
  "title": "viral-ngs-builder",
  "summary": "Build resources tarball for use by viral-ngs applets",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [],
  "inputSpec": [
    {
      "name": "git_commit",
      "label": "Git Commit/Ref",
      "class": "string",
      "optional": true,
      "default": "master"
    },
    {
      "name": "git_url",
      "label": "Git Repo URL",
      "class": "string",
      "optional": true,
      "default": "https://github.com/dnanexus/viral-ngs.git"
    },
    {
      "name": "novocraft_tarball",
      "class": "file",
      "patterns": ["novocraftV3.*.Linux*.tar.gz"]
    },
    {
      "name": "gatk_tarball",
      "class": "file",
      "patterns": ["GenomeAnalysisTK-*.tar.bz2"]
    }
  ],
  "outputSpec": [
    {
      "name": "resources",
      "class": "file"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/viral-ngs-builder.sh",
    "systemRequirements": {
      "main": {
        "instanceType": "mem1_ssd1_x8"
      }
    },
    "execDepends": [
      {"name": "build-essential"},
      {"name": "unzip"},
      {"name": "libncurses5-dev"},
      {"name": "openjdk-7-jre-headless"},
      {"name": "python-numpy"},
      {"name": "python-scipy"},
      {"name": "pep8"},
      {"name": "cython"},
      {"name": "libtool"}
    ]
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "authorizedUsers": []
}
